# Cultivate Deployment Configuration
# Copy this file to .env and customize for your environment

# HTTP/HTTPS Configuration
HTTP_PORT=80
HTTPS_PORT=443
ENABLE_HTTPS=false

# Certificate Paths (when HTTPS enabled)
# CERT_PATH=/path/to/certs

# Backend API URL (Vite requires VITE_ prefix for client-side access)
VITE_BACKEND_URL=/api/v1

# Database Configuration
POSTGRES_USER=apiuser
POSTGRES_DB=cultivate

# Backend Configuration
NODE_ENV=production
BACKEND_PORT=3000

# Root Administrator Configuration
SRP_ROOT_ADMIN_EMAIL=admin@example.com
SRP_ROOT_ADMIN_PASSWORD=change-this-secure-password

# JWT Configuration
JWT_SECRET=change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Email Service Configuration (for password reset)
# SMTP server hostname (e.g., smtp.gmail.com, smtp-mail.outlook.com)
SMTP_HOST=smtp.example.com
# SMTP server port (587 for STARTTLS, 465 for SSL)
SMTP_PORT=587
# Use TLS (true for port 465, false for port 587)
SMTP_SECURE=false
# SMTP authentication username (usually your email address)
SMTP_USER=your-email@example.com
# SMTP authentication password (use app-specific password for Gmail/Yahoo)
SMTP_PASSWORD=your-app-password
# Sender email address for password reset emails
SMTP_FROM_ADDRESS=noreply@example.com
# Frontend URL for password reset links (must match your public URL)
FRONTEND_URL=https://your-domain.com

# Deployment Configuration
DEPLOYMENT_PATH=/opt/cultivate
LOG_PATH=/var/log/cultivate

# Security Configuration
API_USER_UID=1001
API_USER_GID=1001
SOCKET_PERMISSIONS=0770

# SSH Configuration
# SSH_USERNAME=deploy
# SSH_PRIVATE_KEY_PATH=~/.ssh/id_rsa
# SSH_PORT=22
# SSH_TIMEOUT=10000

# Build Configuration
BUILD_MODE=local  # local or remote
VERBOSE=false
